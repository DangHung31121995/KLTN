@{
    ViewData["Title"] = "Index";
}
@section Scripts{
    
    <script src="~/client-app/controllers/wish-list/Index.js" asp-append-version="true"></script>
    <script>
        var wishListObj = new wishListController();
        wishListObj.initialize();
    </script>
}
<style>
    .btn-success i.icon-basket-loaded.icons {
        font-size: 18px;
        margin-right: 5px;
        vertical-align: -1px;
        float: left;
    }
</style>
<section class="main-container col1-layout">
    <div class="main container">
        <div class="col-main">
            <div class="cart">

                <div class="page-content page-order">
                    <div class="page-title">
                        <h2>Shopping Cart</h2>
                    </div>


                    <div class="order-detail-content">
                        <div class="table-responsive">
                            <table class="table table-bordered cart_summary">
                                <thead>
                                    <tr>
                                        <th class="cart_product">Product</th>
                                        <th>Description</th>
                                        <th>Unit price</th>
                                        <th class="action"><i class="fa fa-trash-o"></i></th>
                                    </tr>
                                </thead>
                                <tbody id="table-cart-content"></tbody>
                                
                            </table>
                            <script id="template-cart" type="x-tmpl-mustache">
                                <tr data-id="{{ProductId}}">
                                    <td class="cart_product">
                                        <a href="{{Url}}">
                                            <img src="{{Image}}" alt="{{ProductName}}">
                                        </a>
                                    </td>
                                    <td class="cart_description">
                                        <p class="product-name"><a href="#">{{ProductName}}</a></p>
                                    
                                    </td>
                                    <td class="price"><span>{{Price}} VNĐ</span></td>
                                    <td class="action">
                                    <a href="#" data-id="{{ProductId}}" class="btn btn-danger btn-delete"><i class="fa fa-trash"></i></a>
                                    <button href="#" data-id="{{ProductId}}" class="btn btn-success btn-add"><i class="icon-basket-loaded icons"></i>Thêm vào giỏ</button>
                                    </td>
                                    
                                </tr>
                            </script>
                        </div>
                        @*<div class="cart_navigation">
                            <a class="continue-btn" href="/products.html"><i class="fa fa-arrow-left"> </i>&nbsp; Continue shopping</a>
                            <a id="btnClearAll" href="#"><i class="fa fa-remove"> </i>&nbsp; Clear cart</a>
                            <a class="checkout-btn" href="/checkout.html"><i class="fa fa-check"></i> Proceed to checkout</a>
                        </div>*@
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>